{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "strict": true,
        "jsx": "react-native",
        "lib": [
            "es6",
            "webworker"
        ],
        "moduleResolution": "node",
        "module": "es2015",
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["./src/**/*", "App.tsx"],
    "exclude": ["node_modules"],
    "extends": "@tsconfig/react-native/tsconfig.json"
}
